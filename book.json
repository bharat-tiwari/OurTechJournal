{
    "plugins": [ "localized-footer", "theme-api", "jsfiddle", "styles-sass", "-highlight", "sunlight-highlighter", "bootstrap-callout", "grid" ], 
    "pluginsConfig": {
        "theme-api": {
            "theme": "dark",
            "languages": [
                {
                    "lang": "js",
                    "name": "JavaScript",
                    "default": true
                },
                {
                    "lang": "ts",
                    "name": "Typescript"
                }
            ]
        },
        "jsfiddle":{
            "type":"frame",
            "tabs":["html","js","css","result"],
            "height": "500",
            "width": "80%",
            "theme": "light",
            "menuColor": "b3cccc"
       },
       "styles": {
           "website" : "./styles/website.sass",
            "pdf": "./styles/pdf.sass"
        },
        "sunlight-highlighter": {
            "theme": "dark",
            "lineNumber": true
        },
        "localized-footer": {
             "hline": false,  
             "filename": "./layout/footer.md"
       }
    }
}

